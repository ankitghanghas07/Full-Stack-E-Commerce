<%- include('../../shared/includes/head', {title : 'SignUp'}) %>
<link rel="stylesheet" href="styles/forms.css">
<link rel="stylesheet" href="styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Create an account</h1>
        <% if(enteredData.errorMessage) { %>
            <p class="alert"><%= enteredData.errorMessage %></p>
        <% } %>
        <form action="/signup" method="post" >
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">Email</label>
                <input type="email" name="email" value="<%= enteredData.email %>" id="email" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= enteredData.password %>"  minlength=6 maxlength="6" required>
            </p>
            
            <hr>

            <p>
                <label for="name">Full Name</label>
                <input type="text" name="name"  value="<%= enteredData.name %>" id="name" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" id="street" value="<%= enteredData.street %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<%= enteredData.city %>" required>
            </p>
            <p>
                <label for="pincode">Pincode</label>
                <input type="number" name="pincode" id="pincode" value="<%= enteredData.pincode %>" required>
            </p>

            <button class="btn" type="submit">Create Account</button>
            <p id="switch-form" ><a href="/login">Login</a></p>
        </form>
    </main>

<%- include('../../shared/includes/footer') %>
